<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:theme="@android:style/Theme.Black.NoTitleBar">

  <SearchView
    android:id="@+id/Search_view"
    android:layout_width="279dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="0dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:iconifiedByDefault="false"
    android:queryHint="Search place"
    android:searchIcon="@drawable/ic_search_black_24dp"
    android:showAsAction="collapseActionView|ifRoom"/>
  <Button
    android:id="@+id/SCbutton"
    android:layout_width="79dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="5dp"
    android:layout_alignBottom="@+id/Search_view"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/Search_view"
    android:text="@string/search"/>
  <Button
    android:id="@+id/btMark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_alignEnd="@+id/map"
    android:layout_alignParentBottom="true"
    android:text="@string/add_marker"/>
  <EditText
    android:id="@+id/editText"
    android:layout_width="216dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@+id/btMark"
    android:ems="10"
    android:gravity="start|top"
    android:hint="@string/InText"
    android:inputType="textMultiLine"/>
  <fragment
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="610dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_above="@+id/editText"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/Search_view"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    tools:context=".MapsActivity"/>
  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycle_view"
    android:layout_width="204dp"
    android:layout_height="237dp"
    android:layout_marginTop="0dp"
    android:layout_marginStart="0dp"
    android:layout_alignStart="@+id/map"
    android:layout_alignTop="@+id/map"
    android:visibility="gone"/>
</RelativeLayout>